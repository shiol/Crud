@page
@model CRUD.Pages.Midias.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem JPG</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Midia[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Midia[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Midia[0].Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Midia)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.Src" width="200" />
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.MidiaId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.MidiaId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.MidiaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
